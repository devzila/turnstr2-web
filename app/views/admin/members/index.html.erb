<div class="row">
  <div class="col-xl-12 col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>State</th>
          <th>Verified</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.name %></td>
          <td><%= member.email %></td>
          <td><%= member.state %></td>
          <td><%= member.is_verified ? 'Yes' : 'No' %></td>
          <td>
            <%= link_to('Edit', edit_admin_member_path(member.id))%>
            <%= link_to('Delete', admin_member_path(member.id), method: :delete, data: {:confirm => "You sure?" })%>
            <%= button_to('Delete', admin_member_path(member.id), method: :delete, data: {:confirm => "You sure?" })%>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pull-right">
        <%= paginate @members %>
      </div>
    </div>
  </div>
 </div>
