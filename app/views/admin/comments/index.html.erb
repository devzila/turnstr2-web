<div class="row">
  <div class="col-xl-12 col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
        <tr>
          <th>User</th>
          <th>Created On</th>
          <th>Type</th>
          <th>Comment</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.user.name %></td>
          <td><%= comment.created_at %></td>
          <td><%= comment.commentable_type %></td>
          <td><%= comment.body %></td>

          <td>
            <%= link_to('Delete', admin_comment_path(comment), method: :delete, data: {:confirm => "You sure?" }) %>
          </td>


         </tr>
        <% end %>
        </tbody>
      </table>

      <div class="pull-right">
        <%= paginate @comments %>
      </div>

    </div>
  </div>
 </div>
